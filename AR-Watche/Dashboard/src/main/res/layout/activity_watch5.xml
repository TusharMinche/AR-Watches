<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Dashboard">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rLayout5"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/gradient">

            <ImageView
                android:id="@+id/w5IMG"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/appleremovebg" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rLayout5"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/watch5Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apple Watch Series 5"
                android:textColor="@color/black"
                android:textSize="50dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/watch5price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/watch5Name"
                android:text="₹39,990"
                android:textColor="@color/black"
                android:textSize="40dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/watch5Name"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/watch5price"
                android:text="@string/w5price"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ratingWatch5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@+id/watch5Name"
                android:layout_marginTop="20dp"
                android:paddingTop="30dp"
                android:src="@drawable/star5" />

            <Button
                android:id="@+id/buyWatch5Btn"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_below="@+id/ratingWatch5"
                android:layout_centerHorizontal="true"
                android:background="@drawable/rounded_shape"
                android:text="BUY NOW"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/watch5about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/buyWatch5Btn"
                android:layout_marginTop="20dp"
                android:text="About this item"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/watch5about"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp">

                <TableRow>

                    <TextView
                        android:layout_column="1"
                        android:text="• "
                        android:textColor="@color/black"
                        android:textSize="25dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_column="2"
                        android:paddingBottom="10dp"
                        android:paddingEnd="20dp"
                        android:text="Always-on Retina display has nearly 20% more screen area than Series 6, making everything easier to see and use"
                        android:textColor="@color/black"
                        android:textSize="17dp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_column="1"
                        android:text="• "
                        android:textColor="@color/black"
                        android:textSize="25dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_column="2"
                        android:paddingBottom="10dp"
                        android:paddingEnd="20dp"
                        android:text="The most crack-resistant front crystal yet on an Apple Watch, IP6X dust resistance and swimproof design"
                        android:textColor="@color/black"
                        android:textSize="17dp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_column="1"
                        android:text="• "
                        android:textColor="@color/black"
                        android:textSize="25dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_column="2"
                        android:paddingBottom="10dp"
                        android:paddingEnd="20dp"
                        android:text="Measure your blood oxygen with a powerful sensor and app"
                        android:textColor="@color/black"
                        android:textSize="17dp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_column="1"
                        android:text="• "
                        android:textColor="@color/black"
                        android:textSize="25dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_column="2"
                        android:text="Take an ECG anytime, anywhere"
                        android:textColor="@color/black"
                        android:textSize="17dp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_column="1"
                        android:text="• "
                        android:textColor="@color/black"
                        android:textSize="25dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_column="2"
                        android:paddingBottom="10dp"
                        android:paddingEnd="20dp"
                        android:text="Get high and low heart rate, and irregular heart rhythm notifications"
                        android:textColor="@color/black"
                        android:textSize="17dp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_column="1"
                        android:text="• "
                        android:textColor="@color/black"
                        android:textSize="25dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_column="2"
                        android:paddingBottom="10dp"
                        android:paddingEnd="20dp"
                        android:text="Stay in the moment with the new Mindfulness app reach your sleep goals with the Sleep app"
                        android:textColor="@color/black"
                        android:textSize="17dp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_column="1"
                        android:text="• "
                        android:textColor="@color/black"
                        android:textSize="25dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_column="2"
                        android:paddingBottom="10dp"
                        android:paddingEnd="20dp"
                        android:text="Track new tai chi and pilates workouts, in addition to favourites like running, yoga, swimming and dance"
                        android:textColor="@color/black"
                        android:textSize="17dp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_column="1"
                        android:text="• "
                        android:textColor="@color/black"
                        android:textSize="25dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_column="2"
                        android:paddingBottom="10dp"
                        android:paddingEnd="20dp"
                        android:text="Track your daily activity on Apple Watch and see your trends in the Fitness app on iPhone"
                        android:textColor="@color/black"
                        android:textSize="17dp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_column="1"
                        android:text="• "
                        android:textColor="@color/black"
                        android:textSize="25dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_column="2"
                        android:paddingEnd="20dp"
                        android:text="Sync your favourite music and podcasts"
                        android:textColor="@color/black"
                        android:textSize="17dp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_column="1"
                        android:text="• "
                        android:textColor="@color/black"
                        android:textSize="25dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_column="2"
                        android:paddingBottom="10dp"
                        android:text="All-day battery life"
                        android:textColor="@color/black"
                        android:textSize="17dp" />
                </TableRow>
            </TableLayout>

        </RelativeLayout>

    </RelativeLayout>


</ScrollView>